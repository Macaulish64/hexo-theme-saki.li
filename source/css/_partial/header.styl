.header {
    display: flex;
    margin: 0 auto;
    padding: 1em;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    .blog-title .logo {
        font-family: 'Source Serif Pro', 'Noto Serif SC', serif;
        color: #000;
        font-size: 1.2em;
        text-decoration: none;
        margin: 0 auto;
    }
    .blog-title {
        height: 26.5;
    }
    .menu {
        font-family: "TIBch", "Classic Grotesque W01", "Avenir Next", 
            "Segoe UI", "Helvetica Neue", Arial, "PingFang SC",
            "Heiti SC", "Noto Sans CJK SC", "Source Han Sans SC",
            "Hiragino Sans GB", "Microsoft YaHei UI", "Microsoft YaHei", sans-serif;
        margin: 0 auto;
        vertical-align: text-top;
        padding-left: 0;
        .menu-item {
            display: inline-block;
            padding: 0.25em;
        }
        .menu-item-link {
            color:  #bababa;
            text-decoration: none;
            font-size: 1em;
            &:hover {
                color: #111;
            }
        }
        .current-menu-item-link {
            color: #111;
            text-decoration: none;
        }
    }
}