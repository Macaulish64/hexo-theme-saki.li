.tag {
  padding: 3% 5%;
  border: 1px #ddd;
  border-style: solid none none none;
  clear: left;
  font-size: 15px;
  line-height: 1.77;
  color: #444;
  padding-top: 15px;
  text-align: justify;
  text-justify: distribute;
  word-break: normal;
  .tagcloud {
    margin: 0 0 30px 0;
    a {
        font-size: 1.2em;
        padding:0px 5px;
        margin:3px;
        display: inline-block;
        border: 1px dotted #000000;
        color: #000000;
        text-decoration: none;
        &:hover {
            color: #fff;
            border: 1px solid #000000;
            background: #000000;
        }
    }
  }
  .taglist {
    margin: 0 0 30px 0;
    .tag-name{
        padding-bottom: 0.5em;
        .text {
          font-size: 1.2em;
        }
      }
    .tag-post{
      .tag-post-time {
          display: inline-block;
          margin-right: 10px;
          color: #BABABA;
      }
      .tag-post-name {
          color: #000000;
          text-decoration: none;
      }
    }
  }


}